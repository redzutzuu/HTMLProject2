<style>
  .button-container,
  .centered-text,
  .centered-link {
    display: flex;
    justify-content: center;
    margin-bottom: 20px;
  }
</style>

<section>
  <div class="button-container">
    <form action="/creare-bd" method="get">
      <button class="buton1">Creare BD</button>
    </form>
    <form action="/inserare-bd" method="get" style="margin-left: 10px">
      <button class="buton1">Inserare BD</button>
    </form>
  </div>

  <div class="centered-text">
    <h1>Toate produsele din tabela "produse"</h1>
  </div>

  <table class="tabel">
    <tr>
      <th>ID</th>
      <th>Nume</th>
      <th>Preț</th>
      <th>Produs</th>
      <% if(utilizator != null) { %>
      <th>Actions</th>
      <% } %>
    </tr>
    <% objects.forEach(function(obj) { %>
    <tr>
      <td><%= obj.id %></td>
      <td><%= obj.nume %></td>
      <td><%= obj.pret %></td>
      <td>
        <img
          src="/imagini/<%= obj.src_img %>"
          style="width: 100px; height: 100px"
        />
      </td>
      <% if(utilizator != null) { %>
      <td>
        <form method="POST" action="/adauga-cos">
          <input type="hidden" name="id" value="<%= obj.id %>" />
          <button class="buton1" type="submit">Adaugă în coș</button>
        </form>
      </td>
      <% } %>
    </tr>
    <% }); %>
  </table>

  <div class="centered-link">
    <a class="a1" href="vizualizare-cos">Vizualizare coș</a>
  </div>
</section>
